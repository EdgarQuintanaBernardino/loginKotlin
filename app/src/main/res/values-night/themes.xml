<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange</item>
    </style>
    <style name="HomeDrawerNavMenuShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>
    <style name="HomeDrawerNavMenuTextAppearance" parent="">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <!-- Tema personalizado para el AlertDialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Color de fondo del diálogo -->
        <item name="android:background">@color/black</item>
        <!-- Color de los botones -->
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <!-- Estilo para el botón positivo -->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00FF00</item> <!-- Verde -->
    </style>

    <!-- Estilo para el botón negativo -->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF0000</item> <!-- Rojo -->
    </style>
    <style name="NumberPickerTheme" parent="">
        <item name="colorAccent">@color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <!--<item name="colorControlNormal">@color/gray_dark</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
</resources>