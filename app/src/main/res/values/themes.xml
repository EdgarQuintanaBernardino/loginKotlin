<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:navigationBarColor">@android:color/black</item>

    </style>

    <style name="Theme.Login" parent="Base.Theme.Login" />
    <style name="roundedRestaurantImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
        <item name="color">@color/white</item>
    </style>

        <!-- Tema personalizado para el AlertDialog -->
    <!-- Estilo para el botón positivo -->
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00FF00</item> <!-- Verde -->
    </style>

    <!-- Estilo para el botón negativo -->

        <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
            <!-- Color de fondo del diálogo -->
            <item name="android:background">@color/black</item>
            <item name="android:textColor">@color/orange</item>


        </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF0000</item> <!-- Rojo -->
    </style>



    <style name="roundedHeaderImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="roundedRecentTransactionImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_7sdp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="SpecificCornerCut">
        <item name="cornerSizeBottomRight">@dimen/_20sdp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_20sdp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="HomeDrawerNavMenuShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="HomeDrawerNavMenuTextAppearance" parent="">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>